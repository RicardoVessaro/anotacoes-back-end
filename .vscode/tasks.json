{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "python",
			"dockerBuild": {
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"tag": "ricardovessaro/anotacoes-back-end:debug",
				"pull": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"dockerRun": {
				"containerName": "container-anotacoes-back-end",
				"image": "ricardovessaro/anotacoes-back-end:debug",
				"remove": true,
				"env": {
					"FLASK_ENV": "development",
					"INTEGRATION_TEST_HOST": "http://127.0.0.1",
                    "INTEGRATION_TEST_PORT": "5000",
                    "TEST_MONGODB_USER": "user",
                    "TEST_MONGODB_PASSWORD": "senha",
                    "TEST_MONGODB_ATLAS_PREFIX": "anotacoes-cluster.jwtdf.mongodb.net",
                    "TEST_MONGODB_DATABASE": "anotacoes-test",
                    "TEST_MONGODB_URL_OPTIONS": "retryWrites=true&w=majority"
				},
				"volumes": [
					{
						"containerPath": "/app",
						"localPath": "${workspaceFolder}"
					}
				],
				"ports": [
					{
						"containerPort": 5000,
						"hostPort": 5001
					}
				]
			},
			"python": {
				"args": [
					"run",
					"--host",
					"0.0.0.0",
					"--port",
					"5000"
				],
				"module": "flask"
			}
		},
		{
			"label": "bridge-to-kubernetes.resource",
			"type": "bridge-to-kubernetes.resource",
			"resource": "anotacoes-back-end",
			"resourceType": "service",
			"ports": [
				5001
			],
			"targetCluster": "k3d-anotacoes-cluster",
			"targetNamespace": "default",
			"useKubernetesServiceEnvironmentVariables": false,
			"isolateAs": "ricardo-f7bf"
		},
		{
			"label": "bridge-to-kubernetes.compound",
			"dependsOn": [
				"bridge-to-kubernetes.resource",
				"docker-run: debug"
			],
			"dependsOrder": "sequence"
		}
	]
}